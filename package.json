    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vite-plugin-dynamic-import": "^1.5.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-image-optimizer": "^1.1.7",
    "vite-tsconfig-paths": "^4.2.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "windows",
    "brightness-control",
    "multi-monitor",
    "ddc-ci",
    "desktop-app",
    "system-tray",
    "automation"
  ]
}
