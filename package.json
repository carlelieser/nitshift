{
  "name": "glimmr",
  "productName": "Glimmr",
  "homepage": "https://glimmr.app",
  "target": "node",
  "version": "0.4.1",
  "description": "The best multi-monitor brightness tool.",
  "main": "out/main/index.js",
  "overrides": { "graceful-fs": "^4.2.11" },
  "precommit": ["format"],
  "scripts": {
    "dev": "cross-env NODE_ENV=development electron-vite dev",
    "bridge": "node ./pipeline/bridge/storage/generate.js",
    "clear": "ts-node -P ./tsconfig.script.json src/main/storage.ts -- --clear",
    "clean": "npx rimraf ./out",
    "capture": "cross-env CAPTURE=true NODE_ENV=development electron-vite dev",
    "format": "prettier ./src/**/*.{ts,tsx} --write",
    "update:cst": "ts-node-esm pipeline/update-code-sign-tool.mjs",
    "sign": "node pipeline/sign.js",
    "hash": "node pipeline/create-project-hash.js",
    "build": "npm run clean && cross-env NODE_ENV=production npm run bridge && electron-vite build",
    "package:dir": "electron-builder --win squirrel --dir",
    "package:installer": "electron-builder --win squirrel",
    "make": "cross-env NODE_ENV=production npm run build && npm run package:dir && npm run hash && npm run build && npm run package:installer",
    "version:prev": "node pipeline/version.js -- --decrement",
    "version:next": "node pipeline/version.js -- --increment",
    "upload": "node pipeline/upload-installer.js",
    "release:prepare": "npm run format && npm run version:next && npm run make && npm run sign",
    "release:create": "ts-node pipeline/create-release.js",
    "release:auto": "npm run release:create -- -- --auto && npm run upload",
    "publish:auto": "npm run release:prepare && npm run release:auto",
    "release": "npm run release:create && npm run upload",
    "publish": "npm run release:prepare && npm run release",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Glimmr",
  "dependencies": {
    "@electron/asar": "^3.2.8",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/lab": "^5.0.0-alpha.134",
    "@mui/material": "^5.13.4",
    "@mui/x-date-pickers": "^6.8.0",
    "@octokit/types": "^12.4.0",
    "@reduxjs/toolkit": "^1.9.5",
    "color": "^4.2.3",
    "cron": "^2.3.1",
    "dayjs": "^1.11.8",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "fast-glob": "^3.3.2",
    "firebase": "^10.7.1",
    "fs-extra": "^11.2.0",
    "immutability-helper": "^3.1.1",
    "lodash": "^4.17.21",
    "lumi-control": "^1.3.8",
    "mui-symbols": "^1.0.15",
    "node-fetch": "^2.6.11",
    "node-machine-id": "^1.1.12",
    "nodemailer": "^6.9.8",
    "object-path": "^0.11.8",
    "octokit": "^3.1.2",
    "p-queue": "^8.0.1",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.7",
    "react-virtualized": "^9.22.5",
    "regedit": "^5.1.2",
    "stripe": "^12.9.0",
    "systeminformation": "^5.21.24",
    "v8-compile-cache": "^2.4.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-class-properties": "^7.23.3",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/auto-launch": "^5.0.2",
    "@types/color": "^3.0.3",
    "@types/lodash": "^4.14.194",
    "@types/node-fetch": "^2.6.4",
    "@types/nodemailer": "^6.4.8",
    "@types/object-path": "^0.11.4",
    "@types/prettier": "^2.7.3",
    "@types/react-beautiful-dnd": "^13.1.4",
    "@types/react-dom": "^18.2.4",
    "@types/react-virtualized": "^9.21.29",
    "@vitejs/plugin-react": "^4.2.1",
    "cli-progress": "^3.12.0",
    "cli-spinners": "^2.9.0",
    "cross-env": "^7.0.3",
    "electron": "^28.2.1",
    "electron-builder": "^24.9.1",
    "electron-builder-squirrel-windows": "^24.11.0",
    "electron-vite": "^2.0.0",
    "flat": "^6.0.1",
    "gh-release-assets": "^2.0.1",
    "log-symbols": "4.1.0",
    "node-emoji": "^2.1.0",
    "node-ssh": "^13.1.0",
    "ora": "5.4.1",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.8",
    "prompt-confirm": "^2.0.4",
    "rollup-obfuscator": "^4.1.1",
    "sharp": "^0.33.2",
    "svgo": "^3.2.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3",
    "unzip": "^0.1.11",
    "vite-plugin-dynamic-import": "^1.5.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-image-optimizer": "^1.1.7",
    "vite-tsconfig-paths": "^4.2.3"
  },
  "keywords": []
}
