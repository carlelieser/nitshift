{
  "name": "nitshift",
  "productName": "Nitshift",
  "homepage": "https://nitshift.com",
  "target": "node",
  "version": "0.5.10",
  "description": "The best multi-monitor brightness tool.",
  "main": "out/main/index.js",
  "overrides": {
    "graceful-fs": "^4.2.11"
  },
  "precommit": [
    "format"
  ],
  "scripts": {
    "dev": "electron-vite dev",
    "clear": "tsx -P ./tsconfig.script.json src/main/storage.ts -- --clear",
    "clean": "npx rimraf ./dist && npx rimraf ./out",
    "capture": "cross-env CAPTURE=true NODE_ENV=development electron-vite dev",
    "format": "prettier ./src/**/*.{ts,tsx} --write",
    "build": "npm run clean && cross-env NODE_ENV=production electron-vite build",
    "package:dir": "electron-builder --win squirrel --dir",
    "package:installer": "electron-builder --win squirrel",
    "make": "npm run build && npm run package:dir && npm run package:installer",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "author": {
    "name": "Carlos Santos",
    "email": "hello@carlelieser.dev",
    "url": "https://carlelieser.dev"
  },
  "dependencies": {
    "@octokit/types": "^12.4.0",
    "cron": "^2.3.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.1.0",
    "fast-glob": "^3.3.2",
    "fix-esm": "^1.0.1",
    "fs-extra": "^11.2.0",
    "just-diff": "^6.0.2",
    "lodash": "^4.17.21",
    "lumi-control": "^1.3.15",
    "node-fetch": "^2.6.11",
    "node-machine-id": "^1.1.12",
    "object-path": "^0.11.8",
    "p-queue": "^8.0.1",
    "regedit": "^5.1.2",
    "suncalc": "^1.9.0",
    "systeminformation": "5.27.14",
    "uuid-by-string": "^4.0.0",
    "v8-compile-cache": "^2.4.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-class-properties": "^7.23.3",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/lab": "^5.0.0-alpha.165",
    "@mui/material": "^5.15.10",
    "@mui/x-date-pickers": "^6.19.4",
    "@reduxjs/toolkit": "^2.2.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/auto-launch": "^5.0.2",
    "@types/color": "^3.0.3",
    "@types/lodash": "^4.14.194",
    "@types/node-fetch": "^2.6.4",
    "@types/object-path": "^0.11.4",
    "@types/prettier": "^2.7.3",
    "@types/react-beautiful-dnd": "^13.1.4",
    "@types/react-dom": "^18.2.4",
    "@types/react-virtualized": "^9.21.29",
    "@types/suncalc": "^1.9.2",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "^3.2.4",
    "color": "^4.2.3",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-builder-squirrel-windows": "^25.1.8",
    "electron-devtools-installer": "^4.0.0",
    "electron-vite": "^2.3.0",
